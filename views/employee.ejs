<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halaman Tambah Employee</title>
</head>
<body>
    <form method="post" action="/api/employees">
        <input type="text" name="name" placeholder="nama">
        <input type="text" name="addres" placeholder="alamat">
        <input type="text" name="phone" placeholder="phone">
        <input type="text" name="email" placeholder="email">
        <button type="submit">Simpan</button>
        <button type="reset">Reset</button>
    </form>

    <hr>
    <h1>Table Employee</h1>
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Alamat</th>
            <th colspan="3">#</th>

        </tr>
        <% employees.forEach((data) => { %>
            <tr>
                <td><%= data.name %></td>
                <td><%= data.addres %></td>
                <td>
                    <a href="<%= /employee/+data.id %>">Detail</a>
                </td>

                <td>
                    <a href="<%= /employee-update/+data.id %>">update</a>
                </td>

                <td>
                    <a href="<%= '/api/employees/delete/'+ data.id %>">Delete</a>
                </td>
            </tr>
        <%})%>
    </table>
</body>
</html>